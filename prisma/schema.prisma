type Dimensions {
    width Int
    depth Int
    height Int
}

model Item {
    id String @id @default(auto()) @map("_id") @db.ObjectId
    name String
    dimensions Dimensions
    priority Int
    expiryDate String
    usageLimit Int
    preferredZone String
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
}

model Container {
    id String @id @default(auto()) @map("_id") @db.ObjectId
    zone String
    dimensions Dimensions
    itemsIds String[]
}

model Zone{
    id String @id @default(auto()) @map("_id") @db.ObjectId
    name String
    containersIds String[]
}